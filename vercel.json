{
  "version": 2,
  "buildCommand": "cd react-chat-app && npm run build",
  "outputDirectory": "react-chat-app/build",
  "installCommand": "cd react-chat-app && npm install",
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}